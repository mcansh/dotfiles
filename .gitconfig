[user]
	name = Logan McAnsh
	email = logan@mcan.sh
	signingkey = 15525A9DFF93A7C6
[push]
	default = current
[alias]
	# show last commit's sha
	sha = rev-parse HEAD
	co = checkout
	cm = "commit -sm"
	p = push
	# add and commit untracked files
	a = "add -A"
	s = status
	# remove file from git
	remove = "rm -r --cached"
	d = diff
	fix = "commit --fixup"
	unstage ="reset --"

	# list these aliases
	la = "!git config -l | grep alias | cut -c 7-"

	# shows files in current repo?
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

	# displays commits of current repo
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative

	# shows every branch's last commit absolute date
	b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
[help]
	autocorrect = 0
[credential]
	helper = store
[commit]
	gpgsign = true
[gpg]
	program = gpg
[core]
	excludesfile = /Users/loganmcansh/.gitignore_global
	editor = code-insiders --wait
	ignorecase = false
	pager = delta
[delta]
	plus-color = "#012800"
	minus-color = "#340001"
	side-by-side = true
[color]
  pager = true
	ui = true
  status = auto
  diff = auto
  branch = auto
  showBranch = auto
  interactive = auto
  grep = auto
[rebase]
  autosquash = true
[interactive]
  diffFilter = delta --color-only

# Enforce SSH
#[url "ssh://git@github.com/"]
#  insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
  insteadOf = https://bitbucket.org/
[fetch]
	prune = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
[init]
	defaultBranch = main
