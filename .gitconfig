[push]
	default = current
	autoSetupRemote = true
[alias]
	# show last commit's sha
	sha = rev-parse HEAD
	co = checkout
	c = "commit -s"
	p = push
	# add and commit untracked files
	a = "add -A"
	s = status
	# remove file from git
	remove = "rm -r --cached"
	d = diff
	fix = "commit --fixup"
	unstage ="reset --"

	# show things ignored with `git update-index --assume-unchanged <file>`
	ignored = !git ls-files -v | grep "^[[:lower:]]"

	# list these aliases
	la = "!git config -l | grep alias | cut -c 7-"

	# shows files in current repo?
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

	# displays commits of current repo
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative

	# shows every branch's last commit absolute date
	b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
	# lists files ignored using `git --assume-unchanged`
	ignored = !git ls-files -v | grep "^[[:lower:]]"
[help]
	autocorrect = 0
[credential]
	helper = store
[commit]
	gpgsign = true
[core]
	excludesfile = ~/.gitignore
	editor = code-insiders --wait
	ignorecase = false
	pager = delta
	hooksPath = ./git_hooks
[delta]
	side-by-side = true
	syntax-theme = "GitHub"
[color]
  pager = true
	ui = true
  status = auto
  diff = auto
  branch = auto
  showBranch = auto
  interactive = auto
  grep = auto
[rebase]
  autosquash = true
[interactive]
  diffFilter = delta --color-only

# Enforce SSH
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
  insteadOf = https://bitbucket.org/

[diff "lockb"]
    textconv = bun
    binary = true

[fetch]
	prune = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[tag]
	gpgSign = true

[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
