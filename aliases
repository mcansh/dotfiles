# keep a log of installed brew files
function brewfile {
  echo '> 1/2 Generating Brewfile'
  brew bundle dump --force
  echo '> 2/2 Moving Brewfile'
  mv brewfile ~/dotfiles/Brewfile
  echo '> Done ðŸ‘Œ'
}

alias installBrewfile='brew bundle --file=~/dot-dotfiles/Brewfile'

alias backupGlobalYarn='cp ~/.config/yarn/global/package.json ~/dotfiles/npm-global.json'

function brewup {
  echo '> 1/6 Updating Homebrew ðŸ“¦'
  brew update
  echo '> 2/6 Checking Homebrew for issues â›”ï¸'
  brew doctor
  echo '> 3/6 Getting a list of oudated packages ðŸ“œ'
  brew outdated
  outdatedPackages="$(brew outdated --numstat | wc -l)"
  if (( $outdatedPackages > 0 ))
  then
    echo '> 4/6 Upgrading packages ðŸšš'
    brew upgrade
  else
    echo 'No updates are available'
  fi
  echo "> 5/6 Removing dead symlinks ðŸ’€"
  brew prune
  echo '> 6/6 Cleaning up ðŸš®'
  brew cleanup
  brew cask cleanup
  echo '> Done. ðŸŽ‰'
}


