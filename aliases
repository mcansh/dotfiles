# update everything
function updateall {
  echo 'â–² [1/5] Running Homebrew update script'
  brewup
  echo 'â–² [2/5] Updating Rubygems'
  gem update
  gem update --system
  echo 'â–² [3/5] Running Yarn Global Upgrade'
  yarn global upgrade
  echo 'â–² [4/5] Updating Apps from MAS'
  mas outdated && mas upgrade
  echo 'â–² [5/5] Running macOS Upgrade'
  update
}

